<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.2">
    <title xml:lang="ko">XE Design Team - White Square</title>
    <description xml:lang="ko">XDT 이동현 개발자가 최초로 공식 배포한 화이트스퀘어 레이아웃 입니다.</description>
    <version>2.0</version>
    <date>2013-01-16</date>

    <author email_address="dlehdankaf@gmail.com" link="http://www.xedesignteam.com/">
        <name xml:lang="ko">이동현</name>
    </author>
    <menus>
		<menu name="main_menu" maxdepth="1" default="true">
            <title xml:lang="ko">상단 메뉴</title>
			<title xml:lang="en">menu</title>
        </menu>
		<menu name="footer_menu" maxdepth="1" default="true">
            <title xml:lang="ko">하단 메뉴</title>
			<title xml:lang="en">menu</title>
        </menu>
    </menus>
	<extra_vars>
		<var name="header_logo_image" type="image">
			<title xml:lang="ko">헤더 로고 이미지</title>
			<description xml:lang="ko">헤더에 출력될 로고 이미지입니다. 가로 210px, 세로 78px를 권장합니다.</description>
		</var>
		<var name="header_logo_url" type="text">
			<title xml:lang="ko">헤더 로고 주소</title>
			<description xml:lang="ko">이미지 로고를 클릭하면 이동될 주소입니다.</description>
		</var>
		<var name="banner" type="select">
			<title xml:lang="ko">슬라이드 베너</title>
			<description xml:lang="ko">슬라이드 베너를 사용하시겠습니까?</description>
			<options value="Y">
				<title xml:lang="ko">예, 사용하겠습니다.</title>
				<value>Y</value>
				</options>	
			<options value="N">
				<title xml:lang="ko">아니오, 사용하지 않겠습니다.</title>
				<value>N</value>
			</options>
		</var>
		<var name="body_style" type="select">
			<title xml:lang="ko">본문 스타일</title>
			<description xml:lang="ko">본문 스타일을 선택하세요</description>
			<options value="main">
				<title xml:lang="ko">1단 메인페이지</title>
				<value>main</value>
				</options>	
			<options value="sub">
				<title xml:lang="ko">2단 서브페이지</title>
				<value>sub</value>
			</options>
		</var>
		<var name="footer_email" type="text">
			<title xml:lang="ko">푸터 이메일</title>
			<description xml:lang="ko">푸터에 들어갈 이메일 주소입니다</description>
		</var>
		<var name="footer_copy" type="text">
			<title xml:lang="ko">푸터 저작권</title>
			<description xml:lang="ko">푸터에 저작권 정보를 기입합니다</description>
		</var>
	</extra_vars>
</layout>
